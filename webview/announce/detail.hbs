<style>
  .detail-container {
    padding-left: 10px;
    padding-right: 10px;
    box-sizing: content-box;
  }
</style>

<div id="outer">
  <div id="inner">
    <div id="header">
      <nav class="uk-navbar-container sl-navbar-container" uk-navbar>
        <div class="uk-navbar-left">
          <ul class="uk-navbar-nav">
            <li class="uk-active"><a class="uk-text-bold no-hover" style="text-transform: none;">{{announce/title}}</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <div id="body">
      <div class="detail-container">
        {{{announce/body}}}
        <div style="text-align: right; margin-bottom: 5px;">
          {{{announce/date}}}
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  if (window.history.length != 1) {
    $(".sl-navbar-container").prepend('<div class="uk-navbar-left"><a href="/webview.php/announce/index?id={{announce/id}}" class="uk-icon uk-icon-button sl-icon" uk-icon="icon: arrow-left; ratio: 1.5"></a></div>')
  }
  if (!external) {
    $('a[href^="http"]').each(function () {
      if ($(this).attr("href").indexOf("webview.php/announce/index") >= 0) return
      $(this).attr("href", "native://browser?url=" + encodeURIComponent($(this).attr("href")))
    })
  }
</script>