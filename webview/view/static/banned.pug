extends ../../includes/head.pug

block body
  #outer
    #inner
      #header
        - var languageButton = true
        include ../../includes/header.pug
            
      #body
        div(class="uk-container uk-container-medium uk-margin-top")
          h4 !{replaceHref(i18n.banned.notice, "tos", "'../tos/read'")}
          p(style="color: red") !{i18n.banned.messageFromAdmin} !{message}

          if permanent == false
            p(style="color: blue") !{i18n.banned.temporaryBanned} !{expirationDateHuman} (!{expirationDate})
          if supportMail.length > 0
            hr
            center !{supportMail}
  include ../../includes/changeLanguage.pug