<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{{#if pageTitle}} {{pageTitle}} {{else}} SunLight WebView {{/if}}</title>

  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="format-detection" content="telephone=no">
  {{#if external}}
  <meta name="viewport" content="width=device-width">
  {{else}}
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
  {{/if}}

  <link rel="stylesheet" type="text/css" href="/resources/css/uikit.min.css">
  <link rel="stylesheet" type="text/css" href="/resources/css/styles.css">
  <link rel="stylesheet" type="text/css" href="/resources/css/overlayScrollbars.min.css">
  {{#unless external}}
  <link rel="stylesheet" type="text/css" href="/resources/css/webview.css">
  {{/unless}}
  {{#each stylesheets}}
  <link rel="stylesheet" type="text/css" href="{{this}}">
  {{/each}}

  <script type="text/javascript" src="/resources/js/uikit.min.js"></script>
  <script type="text/javascript" src="/resources/js/jquery.min.js"></script>
  <script type="text/javascript" src="/resources/js/common.js?id=12"></script>
  <script type="text/javascript" src="/resources/js/uikit-icons.min.js"></script>
  <script type="text/javascript" src="/resources/js/jquery.overlayScrollbars.min.js"></script>
  <script type="text/javascript" src="/resources/js/change-language.js"></script>
  {{#each scripts}}
  <script type="text/javascript" src="{{this}}"></script>
  {{/each}}

  <script type="text/javascript">
    var userId = "{{{ userId }}}"
    var authToken = "{{{ authToken }}}"
    var external = {{{ external }}}
    var headers = {{{ headers }}}

    $(function () {
      window.scrollbar = $("#body").overlayScrollbars({
        className: "os-theme-dark os-theme-sunlight"
      })
    })
  </script>
</head>

<body>
  {{{body}}}
  {{{changeLanguageModal}}}
</body>

</html>