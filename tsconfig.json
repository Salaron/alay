{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "commonjs", 
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "preserveSymlinks": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}